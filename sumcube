//SUM OF NUMBER  AND CUBE ....

#include<iostream>
using namespace std;
int main(){
    int a;
    cout<<"Enter three digit number = ";
    cin>>a;
    int b=a/100;
    int c=a%100;
    int d=c/10;
    int e=c%10;
    cout<<"sum = "<<b+d+e;
    cout<<"first digit ="<<b*b*b<<"\n";
    cout<<"first digit ="<<d*d*d<<"\n";
    cout<<"first digit ="<<e*e*e;
}